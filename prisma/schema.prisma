generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CategoryExpenses {
  id       Int        @id @default(autoincrement())
  category String
  icon     String     @default("")
  colors   String     @default("")
  Despesas Despesas[]
}

model Despesas {
  id                     Int                 @id @default(autoincrement())
  tipo_despesa           String
  descricao_despesa      String
  valor_gasto            Float
  quantidade_parcela     Int
  parcela                Float
  month                  Int
  year                   Int
  hash                   String              @unique
  date                   DateTime
  is_divided             Boolean
  id_user                Int
  id_despesas_parceladas Int?
  id_category            Int
  category               CategoryExpenses    @relation(fields: [id_category], references: [id])
  despesas_parceladas    DespesasParceladas? @relation(fields: [id_despesas_parceladas], references: [id])
  user                   User                @relation(fields: [id_user], references: [id])
}

model DespesasParceladas {
  id                  Int        @id @default(autoincrement())
  descricao_despesa   String
  valor_gasto         Float
  prestacoes          Float
  parcela             Int
  date                DateTime
  user_id             Int
  despesas_parceladas Despesas[]
  user                User       @relation(fields: [user_id], references: [id])
}

model FinanceConfig {
  id              Int    @id @default(autoincrement())
  renda           Float?
  guarde_dinheiro Float?
  balance         Float?
  user_id         Int    @unique
  user            User   @relation(fields: [user_id], references: [id])
}

model User {
  id                 Int                  @id @default(autoincrement())
  nome               String               @default("")
  sobrenome          String               @default("")
  email              String               @unique @default("")
  data_nascimento    DateTime?
  telefone           String?
  password           String               @default("")
  cpf                String               @unique @default("")
  Despesas           Despesas[]
  despesasParceladas DespesasParceladas[]
  finance_config     FinanceConfig?
}
